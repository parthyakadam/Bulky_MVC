@model List<Category>

<div class="container">
	<div class="row pt-4">
		<div class="col-6">
			<h1>Categories</h1>
		</div>
		<div class="col-6 text-end">
			<a class="btn btn-dark" asp-controller="Category" asp-action="Create">
				<i class="bi bi-plus-circle"></i>
				Create New Category
			</a>
		</div>
	</div>
	<table class="table table-bordered table-striped">
		<thead>
			<tr>
				<th>Table Order</th>
				<th>Category Name</th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			@foreach (var cat in Model.OrderBy(u => u.DisplayOrder))
			{
				<tr>
					<td>@cat.DisplayOrder</td>
					<td>@cat.Name</td>
					<td>
						<div class="w-75 btn-group" role="group">
							<a asp-controller="Category" asp-action="Edit" asp-route-id="@cat.Id" class="btn btn-primary mx-2"><i class="bi bi-pencil-square"></i>Edit</a>
							<a asp-controller="Category" asp-action="Delete" asp-route-id="@cat.Id" class="btn btn-danger mx-2"><i class="bi bi-trash"></i>Delete</a>
						</div>
					</td>
				</tr>
			}
		</tbody>
	</table>
</div>
