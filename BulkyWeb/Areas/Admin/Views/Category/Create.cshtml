@model Category

<form method="post">
	<div class="border p-3 mt-4">
		<div class="row pb-2 text-center">
			<h2>Create Category</h2>
			<hr/>
		</div>
		<div class="mb-3 row p-1">
			<label class="p-0">Category Name</label>
			<input asp-for="Name" class="form-control"/>
			<span asp-validation-for="Name" class="text-danger"></span>
		</div>
		<div class="mb-3 row p-1">
			<label class="p-0">Display Order</label>
			<input asp-for="DisplayOrder" class="form-control" />
			<span asp-validation-for="DisplayOrder" class="text-danger"></span>
		</div>

		<div asp-validation-summary="All"></div>

		<div class="row">
			<div class="col-6 col-md-3">
				<button type="submit" class="btn btn-primary form-control border-dark">Create</button>
			</div>
			<div class="col-6 col-md-3">
				<button class="btn btn-danger form-control border-dark"><a class="text-white text-decoration-none" asp-controller="Category" asp-action="Index">Back to List</a></button>
			</div>
		</div>
		
	</div>
</form>