@model Category

<form method="post">
	<input asp-for="Id" hidden />
	<div class="border p-3 mt-4">
		<div class="row pb-2">
			<h2 class="text-dark">Delete Category</h2>
			<hr />
		</div>
		<div class="mb-3 row p-1">
			<label class="p-0">Category Name</label>
			<input disabled asp-for="Name" class="form-control" />
		</div>
		<div class="mb-3 row p-1">
			<label class="p-0">Display Order</label>
			<input disabled asp-for="DisplayOrder" class="form-control" />
		</div>

		<div class="row">
			<div class="col-6 col-md-3">
				<button type="submit" class="btn btn-danger form-control border-dark">Delete</button>
			</div>
			<div class="col-6 col-md-3">
				<button class="btn btn-primary form-control border-dark"><a class="text-white text-decoration-none" asp-controller="Category" asp-action="Index">Back to List</a></button>
			</div>
		</div>

	</div>
</form>